<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net6.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <AssemblyName>pvWay.MsSqlLogWriter.nc6</AssemblyName>
    <Version>1.0.0</Version>
    <Authors>Pierre Van Wallendael</Authors>
    <Company>pvWay</Company>
    <Description>Exposes two log writer methods (one sync and one async) for persisting rich log rows into an Ms Sql database. This can be used in conjunction with the MethodResultWrapper.nc6 nuGet package.</Description>
    <Copyright>pvWay ltd 2023</Copyright>
    <PackageProjectUrl>https://github.com/licheez/pvWayNuGetsSolution/tree/master/MsSqlLogWriterSolution/MsSqlLogWriter.nc6</PackageProjectUrl>
    <PackageIcon>pvwayLogoTextLess256.png</PackageIcon>
    <RepositoryUrl>https://github.com/licheez/pvWayNuGetsSolution/tree/master/MsSqlLogWriterSolution/MsSqlLogWriter.nc6</RepositoryUrl>
    <RepositoryType>GitHub</RepositoryType>
    <PackageTags>pvWay MsSql Database Logger Persistence</PackageTags>
    <PackageReleaseNotes>initial</PackageReleaseNotes>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
  </PropertyGroup>

  <ItemGroup>
    <None Include="..\..\pvwayLogoTextLess256.png">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="System.Data.SqlClient" Version="4.8.5" />
  </ItemGroup>

</Project>
