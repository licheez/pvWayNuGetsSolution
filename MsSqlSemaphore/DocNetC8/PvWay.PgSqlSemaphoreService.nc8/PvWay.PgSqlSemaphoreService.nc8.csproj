<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFramework>net8.0</TargetFramework>
        <ImplicitUsings>enable</ImplicitUsings>
        <Nullable>enable</Nullable>
        <Authors>Pierre Van Wallendael</Authors>
        <Company>pvWay Ltd</Company>
        <Description>This nuGet implements the SemaphoreService interfaces using a tiny DAO connection towards an PostgreSQL Database.</Description>
        <PackageProjectUrl>https://github.com/licheez/pvWayNuGetsSolution/tree/master/</PackageProjectUrl>
        <Copyright>pvWay Ltd 2024</Copyright>
        <PackageIcon>pvwayLogoTextLess256.png</PackageIcon>
        <PackageReadmeFile>readme.md</PackageReadmeFile>
        <RepositoryUrl>https://github.com/licheez/pvWayNuGetsSolution/tree/master/</RepositoryUrl>
        <RepositoryType>GitHub</RepositoryType>
        <PackageTags>semaphore distributed lock mutex PostgreSQL Database DAO</PackageTags>
        <PackageReleaseNotes>New void overload for IsolateWorkAsync</PackageReleaseNotes>
        <PackageLicenseExpression>MIT</PackageLicenseExpression>
        <Version>2.0.0</Version>
    </PropertyGroup>

    <ItemGroup>
      <PackageReference Include="Microsoft.Extensions.Configuration.Abstractions" Version="8.0.0" />
      <PackageReference Include="Microsoft.Extensions.DependencyInjection.Abstractions" Version="8.0.1" />
      <PackageReference Include="Npgsql" Version="8.0.4" />
      <PackageReference Include="PvWay.SemaphoreService.Abstractions.nc8" Version="1.0.4" />
    </ItemGroup>

    <ItemGroup>
      <None Update="pvwayLogoTextLess256.png">
        <Pack>True</Pack>
        <PackagePath>/</PackagePath>
      </None>
      <None Update="readme.md">
        <Pack>True</Pack>
        <PackagePath>\</PackagePath>
      </None>
    </ItemGroup>

</Project>
