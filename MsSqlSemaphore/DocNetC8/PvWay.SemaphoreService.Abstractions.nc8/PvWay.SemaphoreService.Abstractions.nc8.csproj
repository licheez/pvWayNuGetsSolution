<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFramework>net8.0</TargetFramework>
        <ImplicitUsings>enable</ImplicitUsings>
        <Nullable>enable</Nullable>
        <Authors>Pierre Van Wallendael</Authors>
        <Company>pvWay Ltd</Company>
        <Description>This nuGet brings the abstraction interfaces for the SemaphoreService</Description>
        <PackageProjectUrl>https://github.com/licheez/pvWayNuGetsSolution/tree/master/</PackageProjectUrl>
        <Copyright>pvWay Ltd 2024</Copyright>
        <PackageIcon>pvwayLogoTextLess256.png</PackageIcon>
        <PackageReadmeFile>readme.md</PackageReadmeFile>
        <RepositoryUrl>https://github.com/licheez/pvWayNuGetsSolution/tree/master/</RepositoryUrl>
        <RepositoryType>GitHub</RepositoryType>
        <PackageTags>semaphore distributed lock mutex</PackageTags>
        <PackageReleaseNotes>New (void) overload for the IsolateWork method</PackageReleaseNotes>
        <PackageLicenseExpression>MIT</PackageLicenseExpression>
        <Version>1.0.4</Version>
    </PropertyGroup>

    <ItemGroup>
      <None Update="readme.md">
        <Pack>True</Pack>
        <PackagePath>\</PackagePath>
      </None>
      <None Update="pvwayLogoTextLess256.png">
        <Pack>True</Pack>
        <PackagePath>\</PackagePath>
      </None>
    </ItemGroup>

